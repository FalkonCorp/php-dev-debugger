{
    "name": "f4lk0n/vdd",
    "description": "Debug helper",
    "type": "library",
    "keywords": [
        "debug",
        "dump",
        "vardump",
        "html"
    ],
    "homepage": "https://github.com/FalkonCorp/php-vdd",
    "license": "MIT",
    "authors": [
        {
            "name": "F4lk0n"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1"
    },
    "autoload": {
        "psr-4": {
            "F4lk0n\\Dev\\": "src/"
        },
        "files": [
            "src/VDD.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1"
    },
    "scripts": {
        "da": "composer dumpautoload",
        "dao": "composer dumpautoload --classmap-authoritative --optimize",

        "test":  "vendor/bin/phpunit --no-coverage",
        "dox":   "vendor/bin/phpunit --no-coverage --testdox",
        "cover": "vendor/bin/phpunit"
    }
}
